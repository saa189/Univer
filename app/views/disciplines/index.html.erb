<h1>Список дисциплин</h1>

<table>
  <tr>
    <th>Название</th>
  </tr>

<% @disciplines.each do |discipline| %>
  <tr>
    <td><%=h discipline.name %></td>
    <td><%= link_to 'Показать', discipline %></td>
    <td><%= link_to 'Редактировать', edit_discipline_path(discipline) %></td>
    <td><%= link_to 'Удалить', discipline, :confirm => 'Вы уверены?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новая дисциплина', new_discipline_path %>
