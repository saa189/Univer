<h1>Список cтудентов группы <%=h @group.numb %> </h1>

<table border = 1>
       <tr>
		<th align="left">Фамилия</th>
		<th align="left">Имя</th>
                <th align="left">Отчество</th>
                <th align="left">Действия</th>

	</tr>

<% for student in @students %>  
    <tr>
       <td><%= link_to student.surname, group_student_path(@group, student) %></td>
       <td><%= link_to student.name, group_student_path(@group, student) %></td>
       <td><%= link_to student.lastname, group_student_path(@group, student) %></td>
       <td><%= link_to 'Корректировать', edit_group_student_path(@group, student) %>
       <%= link_to 'Отчислить', group_student_path(@group, student), :confirm => 'Точно?', :method => :delete %>
       </td>
      </tr>
 <% end %>
 </table> 
