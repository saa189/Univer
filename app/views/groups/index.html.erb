<h1>Список групп</hq>
<table>
    <tr>
        <th>Номер группы</th>
    </tr>
      <% @groups.each do |group| %> 
    <tr>
       <td><%= link_to group.numb, group %></td>
       <td><%= link_to 'Изменить', edit_group_path(group) %></td>
       <td><%= link_to 'Удалить', group, :confirm => 'Точно?', :method => :delete %></td>
       </tr> <% end %> </table> 
   <br />
