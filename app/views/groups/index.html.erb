<h1 >Список групп</hq> <br /><br />
<table border = 1>
    <tr>
        <th>Номер группы</th>
        <th>Действия</th>
    </tr>
      <% @groups.each do |group| %> 
    <tr>
       <td><%= link_to group.numb, group %></td>
       <td><%= link_to 'Изменить', edit_group_path(group) %>
       <%= link_to 'Удалить', group, :confirm => 'Точно?', :method => :delete %></td>
       </tr> <% end %> </table> 
