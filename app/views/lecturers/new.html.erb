  <p>
    <%= f.label :Фамилия %><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <%= f.label :Имя %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Отчество %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
<%= f.check_box :ltype %> 
<%= label_tag(:ltype, "лекции") %> 
  </p>
  <p>
<%= f.check_box :stype %> 
