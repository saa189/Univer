<%= form_for(@group) do |f| %> 
  <% if @group.errors.any? %> 
  <div id="errorExplanation"> 
    <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2> 
    <ul>
    <% @group.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %>
    </ul>
  </div> 
  <% end %>

  <div class="field"> 
    <%= f.label :numb %><br />
    <%= f.text_field :numb %> 
  </div>
  <div class="field">
    <%= f.label :title %><br /> 
    <%= f.text_field :title %> 
  </div> 
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div> 
  <div class="actions"> 
   <%= f.submit %> 
  </div>
 <% end %> 
